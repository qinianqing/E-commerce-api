extends ../../views/cms/header

block content
    .egcmscontent
        link(rel='stylesheet' href='/stylesheets/back/items-new.css')
        link(rel='stylesheet' href='/stylesheets/back/bootstrap-datetimepicker.min.css')
        .content-title
            h4 新建内容
            .content-title-line
        .content
            .row
                form(name='addUser' action='about:blank' method='post' target='rfFrame').form-horizontal#addUserForm
                    .fieldset
                        .form-group
                            label(for='inputType').col-lg-2.control-label *类型
                            .col-lg-10
                                select(name='type' style='width:100px').form-control#inputType
                                    option(value='pic') 长图
                                    option(value='video') 视频
                                    option(value='audio') 音频
                                    option(value='page') 网页
                        .form-group
                            label(for='inputTitle').col-lg-2.control-label *标题
                            .col-lg-10
                                input(type='text' placeholder='item的标题，不要超过30个字' name='title' required).form-control#inputTitle
                        .form-group
                            label(for='inputTopic').col-lg-2.control-label *话题
                            .col-lg-10
                                input(type='text' placeholder='填写话题的ID，24个字符长度' name='topic' required).form-control#inputTopic
                        .form-group
                            label(for='inputAuthor').col-lg-2.control-label *作者
                            .col-lg-10
                                input(type='text' placeholder='作者名称' name='author' required).form-control#inputAuthor
                        .form-group
                            label(for='inputFocus').col-lg-2.control-label *导语
                            .col-lg-10
                                input(type='text' placeholder='一句最吸引人的描述，不要超过20个字' name='focus' required).form-control#inputFocus
                        .form-group
                            label(for='inputDetail').col-lg-2.control-label *描述
                            .col-lg-10
                                textarea(type='text' placeholder='详细描述，不要超过300个字' name='detail' required).form-control#inputDetail
                        .form-group
                            label(for='inputResource')#inputSourseLabel.col-lg-2.control-label *内容
                            .col-lg-10
                                input(type="file" name="content" onchange="onselectresource()" style="display: inline-block" required).fileupload#inputResource
                        .form-group
                            label(for='inputBanner').col-lg-2.control-label *头图
                            .col-lg-10
                                input(type="file" name="content" onchange="onselectbanner()" style="display: inline-block").fileupload#inputBanner
                        .form-group
                            .col-lg-10.col-lg-offset-2.form-btn-box
                                //button(type='button' data-dismiss='modal' style='margin-right:10px').btn.btn-default 取消
                                button(type='submit').btn.btn-lg.btn-primary#addUserSubmit 提交
                iframe(name='rfFrame' src='about:blank' style='display:none;')#rfFrame
    <!-- Bootstrap core js -->
    script(src='https://cdn.bootcss.com/jquery/1.12.4/jquery.min.js')
    script(src='https://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js')
    script(src='/javascripts/back/bootstrap-datetimepicker.min.js')
    script(src='/javascripts/back/items-new.js')
